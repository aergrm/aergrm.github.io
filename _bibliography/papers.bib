@article{ergurum2025military,
abbr      = {WP},
title     = {Leader Hawkishness and Military Spending: A Panel Data Analysis},
author    = {Ergurum, Ahmet},
journal   = {Working Paper},
year      = {2025},
pdf       = {https://www.google.com/search?q=https://ssrn.com/abstract%3D31415926}, % REPLACE with link to SSRN or other repository PDF
abstract  = {Using an original dataset that codes the hawkishness of over 50 national leaders across 30 years, this study employs panel data regression analysis to test the relationship between a leader's psychological disposition and national military expenditure. The results indicate that highly hawkish leaders, independent of controlling for real security threats, alliance commitments, and regime type, correlate with a statistically significant increase in defense spending as a proportion of GDP. This research supports the primary importance of individual-level variables in models of defense policy formation.},
}
